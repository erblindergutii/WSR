// CSS Reset by html5doctor.com Reset Stylesheet
@import "reset.css" 


/*
    Basic Font Setup
*/

fontFamily = 'Roboto'
fontFamilyType = sans-serif

fontLight = 100

fontSizeHero = 72px
fontSizeHOne = 66px
fontSizeHTwo = 45px
fontSizeHThree = 36px
fontSizeHFour = 30px
fontSizeHFive = 26px
fontSizeP = 16px
fontSizeSmall = 12px

h1,h2,h3,h4,h5,p,small
    font-family: fontFamily, fontFamilyType

h1
    font-size: fontSizeHOne

h2
    font-size: fontSizeHTwo
    
h3
    font-size: fontSizeHThree

h4
    font-size: fontSizeHFour

h5
    font-size: fontSizeHFive

p
    font-size: fontSizeP

small
    font-size: fontSizeSmall

/*
    Light Fonts
*/

.light
    font-weight: fontLight

    
/*
    Hero Heading Light Font
*/

.heroH1
    font-weight: 100
    font-size: fontSizeHero
    font-family: fontFamily, fontFamilyType



/*
    Demo Index
*/

body
    padding: 80px
    color: #666

.divider
    width: 100%
    height: 2px
    background: rgba(0,0,0,.1)
    margin: 80px 0
